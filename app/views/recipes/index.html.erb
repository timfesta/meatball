<div class="jumbotron">
</div>

<div class="container">
	<div class="row">
		<% @recipes.each do |recipe| %>
		<div class="col-md-4 col-md-offset-2">
			<h2><%= recipe.name %></h2>
			<p><em>Instructions</em>:
				<%= recipe.instructions %>
			</p> 
			<p>
				<%= link_to "View", recipe_path(recipe) %> -
				<%= link_to "Edit", edit_recipe_path(recipe) %>
			</p>
		</div>
		<% end %>	

	<div class="container">
		<div class="row">
				
					<% @recipes.each do |recipe| %>
					<div class="col-md-4 col-md-offset-2">
						<h2><%= recipe.name %></h2>
						<%= recipe.instructions %> -
						<%= link_to "View", recipe_path(recipe) %> -
						<%= link_to "Edit", edit_recipe_path(recipe) %>
				</div>
				<% end %>	

	</div>

</div>

<div class="container-fluid">
	
	<% if current_user %>
		<center>
			<%= link_to "Add Recipe", new_recipe_path, class: "btn btn-primary" %>
		</center>
	<% else %>
	<% end %>
</div>
<footer>
